{
  "name": "sar-auth-be",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup && node scripts/fix-imports.js && node scripts/copy-prisma-generated.js",
    "build:tsc": "tsc -p tsconfig.json && node scripts/fix-imports.js && node scripts/copy-prisma-generated.js",
    "start": "node dist/server.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest tests/unit --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest tests/unit --coverage",
    "test:tdd": "jest --watch --coverage",
    "prisma:gen:sar": "prisma generate --schema=prisma/sar/schema.prisma",
    "prisma:gen:ldap": "prisma generate --schema=prisma/ldap/schema.prisma",
    "prisma:gen:tmmin": "prisma generate --schema=prisma/tmmin_role/schema.prisma",
    "prisma:gen:sc": "prisma generate --schema=prisma/sc/schema.prisma",
    "prisma:gen:all": "npm run prisma:gen:sar && npm run prisma:gen:sc && npm run prisma:gen:ldap && npm run prisma:gen:tmmin",
    "prisma:pull:sar": "prisma db pull --schema=prisma/sar/schema.prisma",
    "prisma:pull:ldap": "prisma db pull --schema=prisma/ldap/schema.prisma",
    "prisma:pull:tmmin": "prisma db pull --schema=prisma/tmmin_role/schema.prisma",
    "prisma:pull:sc": "prisma db pull --schema=prisma/sc/schema.prisma",
    "prisma:pull:all": "npm run prisma:pull:sar && npm run prisma:pull:sc && npm run prisma:pull:ldap && npm run prisma:pull:tmmin",
    "tdd:generate": "tsx scripts/generate-tdd-docs.ts",
    "tdd:watch": "tsx watch scripts/generate-tdd-docs.ts",
    "tdd:dev": "npm run tdd:generate && npm run dev",
    "predev": "npm run tdd:generate",
    "tdd:generate-evidence": "tsx scripts/generate-test-evidence.ts",
    "tdd:watch-evidence": "tsx scripts/watch-test-results.ts",
    "tdd:test": "npm run test:coverage && npm run tdd:generate-evidence",
    "build:onprem": "docker build --platform linux/amd64 --target export --output build -f Dockerfile.onprem ."
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^10",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^9",
    "@fastify/multipart": "^9.3.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@prisma/adapter-mssql": "^6.17.1",
    "@prisma/client": "^6.17.1",
    "axios": "^1.13.1",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "fastify": "^5.6.1",
    "fastify-plugin": "^4.5.1",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^12.0.0",
    "multipart": "^0.1.5",
    "node-schedule": "^2.1.1",
    "pino": "^9.3.2",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mssql": "^9.1.8",
    "@types/multer": "^2.0.0",
    "@types/node-schedule": "^2.1.8",
    "glob": "^11.0.3",
    "jest": "^29.7.0",
    "prisma": "^6.17.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}